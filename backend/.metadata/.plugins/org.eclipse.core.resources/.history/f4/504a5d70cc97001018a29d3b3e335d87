package com.budgetplannerbackend.model;

import jakarta.persistence.*;
import java.time.LocalDate;

@Entity
@Table(name = "expenses") // plural table name
public class Expense {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    private String category;
    private Double amount;
    private LocalDate date;
    private String note;

    private Long userId; // simple reference to user

    // Constructors
    public Expense() {}
    public Expense(String category, Double amount, LocalDate date, String note, Long userId) {
        this.category = category;
        this.amount = amount;
        this.date = date;
        this.note = note;
        this.userId = userId;
    }

    // Getters and setters
    public Long getId() { return id; }
    public void setId(Long id) { this.id = id; }
    public String getCategory() { return category; }
    public void setCategory(String category) { this.category = category; }
    public Double getAmount() { return amount; }
    public void setAmount(Double amount) { this.amount = amount; }
    public LocalDate getDate() { return date; }
    public void setDate(LocalDate date) { this.date = date; }
    public String getNote() { return note; }
    public void setNote(String note) { this.note = note; }
    public Long getUserId() { return userId; }
    public void setUserId(Long userId) { this.userId = userId; }
}
